<GridPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="val.pp.controller.MainController">
    <VBox prefWidth="200" GridPane.rowSpan="2">
        <children>
            <ListView fx:id="listPlugins" prefHeight="300.0" prefWidth="200.0" />
            <TextArea fx:id="txtArea" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
         <AnchorPane prefHeight="35.0" prefWidth="200.0">
            <children>
               <Button layoutX="148.0" layoutY="2.0" minWidth="80.0" mnemonicParsing="false" prefWidth="100.0" text="Delete Project" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0" />
               <Button layoutY="2.0" minWidth="80.0" mnemonicParsing="false" prefWidth="80.0" text="Add Project" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="5.0" />
            </children>
         </AnchorPane>
        </children>
      <padding>
         <Insets left="5.0" right="5.0" />
      </padding>
    </VBox>
    <GridPane alignment="TOP_CENTER" hgap="10" vgap="10" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowSpan="2" GridPane.valignment="TOP" GridPane.vgrow="ALWAYS">
        <children>
            <Label alignment="TOP_CENTER" text="Title" textAlignment="CENTER" GridPane.columnSpan="3" GridPane.halignment="CENTER">
                <font>
                    <Font size="43.0" />
                </font>
            </Label>
            <VBox minWidth="240.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <children>
                    <TextArea id="txtPluginInfo" />
               <AnchorPane prefHeight="35.0" prefWidth="200.0">
                  <children>
                     <Button id="btnAddPlugin" layoutY="2.0" mnemonicParsing="false" onAction="#addPlugin" prefWidth="80.0" text="Add" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="5.0" />
                     <Button layoutX="148.0" layoutY="2.0" mnemonicParsing="false" prefWidth="80.0" text="Edit" AnchorPane.leftAnchor="80.0" AnchorPane.rightAnchor="80.0" AnchorPane.topAnchor="5.0" />
                     <Button layoutX="158.0" layoutY="12.0" mnemonicParsing="false" prefWidth="80.0" text="Delete" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0" />
                  </children>
               </AnchorPane>
                </children>
            </VBox>
         <Pane minWidth="240.0" style="-fx-background-color: Aqua;" GridPane.columnSpan="3" GridPane.rowIndex="1" />
         <Pane fx:id="paneLeft" minWidth="180.0" GridPane.rowIndex="2" />
         <Pane fx:id="paneRight" minWidth="180.0" style="-fx-background-color: Aqua;" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        </children>
        <columnConstraints>
            <ColumnConstraints minWidth="150.0" prefWidth="180.0" />
            <ColumnConstraints minWidth="240.0" prefWidth="240.0" />
            <ColumnConstraints minWidth="150.0" prefWidth="180.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints />
        </rowConstraints>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <GridPane.margin>
         <Insets top="15.0" />
      </GridPane.margin>

    </GridPane>
    <columnConstraints>
        <ColumnConstraints percentWidth="20" />
        <ColumnConstraints percentWidth="80" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
