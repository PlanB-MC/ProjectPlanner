<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="val.pp.controller.PluginEditorController">
    <children>
        <Label text="Name of Plugin:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="tfName" promptText="Enter Plugin name" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Who's Idea?" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <TextField fx:id="tfAuthorIdea" promptText="Enter Author name" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label text="When was the Idea proposed?" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <DatePicker fx:id="ideaDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <Label text="Description of Plugin" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <TextArea fx:id="taDesc" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.rowSpan="5" />

        <Label text="Is the plugin enabled from start?" GridPane.columnIndex="1" GridPane.rowIndex="8" />
        <CheckBox fx:id="cbEnabled" GridPane.columnIndex="2" GridPane.rowIndex="8" />
        <Label text="What are the requirements?" GridPane.columnIndex="1" GridPane.rowIndex="9" />
        <TextArea fx:id="taRequirements" wrapText="true" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="10" />

        <Label text="Who made the Plugin?" GridPane.columnIndex="1" GridPane.rowIndex="12" />
        <TextField fx:id="tfAuthorPlugin" promptText="Enter Plugin Author name" GridPane.columnIndex="1" GridPane.rowIndex="13" />
        <Label text="When was the Plugin made?" GridPane.columnIndex="2" GridPane.rowIndex="12" />
        <DatePicker fx:id="pluginDatePicker" GridPane.columnIndex="2" GridPane.rowIndex="13" />

        <Button fx:id="btnSubmit" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnSubmit" text="Submit" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="15" />
    </children>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <padding>
        <Insets bottom="20.0" left="5.0" right="20.0" top="10.0" />
    </padding>
</GridPane>
